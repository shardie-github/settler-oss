{
  "name": "settler-oss",
  "version": "0.1.0",
  "description": "Settler Open-Source SDKs and Tools - Official SDKs for Node.js, Python, Go, Ruby, React, and CLI",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present && tsc --noEmit --project packages/protocol/tsconfig.json --project packages/shared/tsconfig.json --project packages/enterprise/tsconfig.json",
    "check-boundaries": "tsx scripts/check-boundaries.ts",
    "contracts:check": "tsx scripts/validate-contracts.ts",
    "secret-leak:check": "tsx scripts/check-secrets.ts",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shardie-github/settler-oss.git"
  },
  "keywords": [
    "settler",
    "reconciliation",
    "financial-api",
    "sdk",
    "typescript",
    "python",
    "go",
    "ruby",
    "react",
    "open-source"
  ],
  "author": "Scott Hardie",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "glob": "^10.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.21.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
