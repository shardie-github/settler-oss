{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://settler.dev/schemas/matching-rules.json",
  "title": "MatchingRules",
  "description": "Configuration for transaction matching rules",
  "type": "object",
  "properties": {
    "tolerance": {
      "type": "number",
      "description": "Amount tolerance for matching (default: 0.0)",
      "minimum": 0,
      "examples": [0.01, 0.1]
    },
    "dateRange": {
      "type": "integer",
      "description": "Date range tolerance in days (default: 0)",
      "minimum": 0,
      "examples": [1, 7]
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Specific fields to match on",
      "examples": [["id", "amount", "date"]]
    }
  }
}
